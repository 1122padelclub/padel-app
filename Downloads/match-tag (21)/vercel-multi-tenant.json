{
  "version": 2,
  "name": "match-tag-multi-tenant",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "functions": {
    "app/api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "env": {
    "NEXT_PUBLIC_CDN_URL": "https://cdn.match-tag.com",
    "NEXT_PUBLIC_MAX_TENANTS": "200",
    "NEXT_PUBLIC_CACHE_TTL": "300000",
    "NEXT_PUBLIC_QUEUE_SIZE": "100"
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=300, s-maxage=300"
        }
      ]
    },
    {
      "source": "/_next/static/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/cdn/:tenantId/:path*",
      "destination": "/api/cdn/:tenantId/:path*"
    },
    {
      "source": "/api/tenant/:tenantId/:path*",
      "destination": "/api/tenant/:tenantId/:path*"
    }
  ],
  "redirects": [
    {
      "source": "/restaurant/:barId",
      "destination": "/mesa?barId=:barId",
      "permanent": false
    }
  ]
}
